{% extends 'base.html.twig' %}

{% block title %}ScoffTest Admin{% endblock %}

{% block body %}
    <h1>ScoffTest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for scoff_test in scoff_tests %}
            <tr>
                <td>{{ scoff_test.id }}</td>
                <td>{{ scoff_test.question }}</td>
                <td>
                    <a href="{{ path('scoff_test_show', {'id': scoff_test.id}) }}">show</a>
                    <a href="{{ path('scoff_test_edit', {'id': scoff_test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('scoff_test_new') }}">Create new</a>
{% endblock %}
